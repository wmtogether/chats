            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSHandlerRank</key>
            <string>Owner</string>
        </dict>
    </array>
    
    <!-- URL Schemes -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleURLName</key>
            <string>com.workspace.desktop</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>workspace</string>
                <string>miko</string>
            </array>
        </dict>
    </array>
    
