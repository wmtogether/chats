    <key>NSCameraUsageDescription</key>
    <string>This app may need camera access for web content and video calls.</string>
    
    <key>NSMicrophoneUsageDescription</key>
    <string>This app may need microphone access for web content and voice calls.</string>
    
    <!-- Location Services (if needed by web content) -->
    <key>NSLocationUsageDescription</key>
    <string>This app may need location access for web content features.</string>
    
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>This app may need location access when in use for web content features.</string>
    
